{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],
      "@lib/*": ["src/lib/*"],
      // "@utils/*": ["src/shared/utils/*"],
      // "@shadcn-ui/*": ["src/shared/shadcn-ui/*"],
      // "@magic-ui/*": ["src/shared/magic-ui/*"],
      // "@stores/*": ["src/shared/stores/*"],
      // "@hooks/*": ["src/shared/hooks/*"],
      // "@libs/*": ["src/shared/libs/*"],
      // "@typings/*": ["src/shared/typings/*"],
      // "@consts/*": ["src/shared/consts/*"],
      // "@contracts/*": ["src/shared/contracts/*"],
      // "@components/*": ["src/shared/components/*"],
      // "@configs/*": ["src/shared/configs/*"],
      // "@styles/*": ["src/shared/styles/*"],
      // "@theme": ["src/shared/styles/theme.ts"],
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "src", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
